import SwiftUI

struct ContentView: View {
    @State private var red: Double = 1.0
    @State private var green: Double = 1.0
    @State private var blue: Double = 1.0
    @State private var brightness: Double = 0.5

    var body: some View {
        VStack {
            // Цветной экран, реагирующий на слайдеры RGB
            Color(red: red, green: green, blue: blue)
                .brightness(brightness - 0.5)
                .edgesIgnoringSafeArea(.all)
            
            // Слайдеры для RGB и яркости
            VStack {
                Slider(value: $red, in: 0...1, label: { Text("Red") })
                Slider(value: $green, in: 0...1, label: { Text("Green") })
                Slider(value: $blue, in: 0...1, label: { Text("Blue") })
                Slider(value: $brightness, in: 0...1, label: { Text("Brightness") })
            }
            .padding()
            .background(Color.white.opacity(0.8))
            .cornerRadius(10)
        }
    }
}

@main
struct ReadingLightApp: App {
    var body: some Scene {
        WindowGroup {
            ContentView()
        }
    }
}
